<div class="centered main-button-container">
<%= render partial: "layouts/button" %>
</div>

<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>


<div class ="container">
  <div class="row nav-row">
      <div class="col-xs-6">
      <%= button_to "Need to Howl", new_howl_path, method: :get, class:"btn btn-primary btn-block center-block" %>
      </div>
      <div class="col-xs-6">
      <%= button_to "See Pack", :wolves, method: :get, class:"btn btn-primary btn-block center-block" %>
      </div>
  </div>
</div>

<div class="howler-text">
  <p>Here are the last five howls from your pack:</p>
</div>

<div>
  <ul>
    <% @howls.each do |h| %>
      <li><%= h.wolf.name %></li>
      <img src="<%= h.wolf.image %>" alt="">
      <img src="<%= h.image %>" alt="">
      <li><%= h.text %></li>
      <li>  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Delete Howl</button></li>
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog modal-sm">
            <div class="modal-content">
              <div class="modal-body">
                <p>Are you sure you want to delete this howl?</p>
              </div>
              <div class="modal-footer">
                <div class="delete-yes">
                  <%= button_to "Yes", howl_path(h), :method=>:delete,  class:"btn btn-default" %>
                </div>
                <div class="delete-cancel">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
</div>




